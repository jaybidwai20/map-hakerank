#include<bits/stdc++.h>
#include <iostream>

using namespace std;

int main()
{   map<string,int>m;
   int n;
   cin>>n;
   while(n--)
   {
       int a ;
       cin>>a;
       string s;
       cin>>s;
       if(a==1)
       {
            int b;
            cin>>b;
            m[s]+=b;
       }
       else if(a==2)
       m.erase(s);
       
        else
       cout<<m[s]<<endl;
 }
  }
   
       
   
